{{- $.Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
    {{- $.Scratch.Add "index" (dict "title" .Title "tags" .Params.tags "content" .Plain "permalink" .Permalink "date" (.Date.Format "2006-01-02") "section" .Section "summary" .Summary) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
